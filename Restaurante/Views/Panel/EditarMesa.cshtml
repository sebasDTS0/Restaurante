@model Restaurante.Models.Mesa
@{
    ViewData["Title"] = "Editar Mesa";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow p-4" style="width: 30rem;">
        <h3 class="text-center mb-4">Editar Mesa</h3>
        <form asp-action="EditarMesa" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Numero" class="form-label">Número de Mesa</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Capacidad" class="form-label">Capacidad</label>
                <input asp-for="Capacidad" class="form-control" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" class="form-select">
                    <option>disponible</option>
                    <option>ocupada</option>
                    <option>reservada</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success rounded-pill">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill ms-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
