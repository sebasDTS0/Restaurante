<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurante</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Restaurante.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav role="navigation" aria-label="Navegación principal">
            <div class="logo" role="banner">
                <a href="/#inicio" class="text-dark text-decoration-none fs-4 fw-semibold" style="font-family: 'Georgia', serif;">
                    Sabores y Tradiciones
                </a>
            </div>
            <button aria-expanded="false" aria-label="Menú de navegación" class="nav-toggle">
                <span class="sr-only">Menú</span>
                <span class="nav-icon"></span>
            </button>
            <ul role="menubar">
                <li role="none"><a class="text-dark" href="/#inicio" role="menuitem" accesskey="1">Inicio</a></li>
                <li role="none"><a class="text-dark" href="/#menu" role="menuitem" accesskey="2">Menú</a></li>
                <li role="none"><a class="text-dark" href="/#nosotros" role="menuitem" accesskey="3">Nosotros</a></li>
                <li role="none"><a class="text-dark" href="/#contacto" role="menuitem" accesskey="4">Contacto</a></li>
                <li role="none">
                    <a href="/Reserva/Index" class="btn btn-danger rounded-pill mx-2 fw-semibold text-white">Reservar Mesa</a>
                </li>
                <li role="none">
                    <a href="/Panel/Index" class="btn btn-danger rounded-pill fw-semibold text-white">Panel Admin</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proyecto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>